<%= render "shared/header" %>

<div class="new-memo">
  <h2 class="heading">ToDoリスト</h2>
  <%= link_to '作成', new_memo_path, class:"new-memo-btn" %>
</div>

<table class="table table-striped lists">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td class="memo-title"><%= memo.title %></td>
        <td class="memo-time">
          <span><%= memo.start_time.strftime("%Y-%m-%d %H:%M") %></span>
        </td>
        <td><%= link_to '詳細', memo %></td>
        <td><%= link_to '編集', edit_memo_path(memo.id) %></td>
        <td><%= link_to '削除',memo_path(memo.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>


<%= month_calendar events: @memos do |date, memos| %>
  <%= date.day %>

  <% memos.each do |memo| %>
    <div>
      <%=link_to memo.title, memo %>
    </div>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
  <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
<% else %>
  <li><%= link_to 'ログイン',  new_user_session_path, class: "login" %></li>
  <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
<% end %>
