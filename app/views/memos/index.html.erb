<%= render "shared/header" %>

<p id="notice"><%= notice %></p>

<h2 class="heading">ToDoリスト</h2>
<table class="lists">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.title %></td>
        <td><%= memo.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '詳細', memo %></td>
        <td><%= link_to '編集', edit_memo_path(memo.id) %></td>
        <td><%= link_to '削除',memo_path(memo.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '日記を書く', new_memo_path %>

<%= month_calendar events: @memos do |date, memos| %>
  <%= date.day %>

  <% memos.each do |memo| %>
    <div>
      <%=link_to memo.title, memo %>
    </div>
  <% end %>
<% end %>